<UserControl x:Class="FlyingColorsDesktop.Views.BattlesToolBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
		
	<ToolBar> 
		<Button	Name="NewBattleButton" Command="{Binding Path=NewBattleCommand}">	
			New Battle
		</Button>		
		<Separator></Separator>
		<Button	Name ="OpenBattleButton" Command="{Binding Path=OpenBattleCommand}">				
			Open Battle
		</Button>
		<Separator></Separator>
		<Button	Name ="SaveBattleButton" Command="{Binding Path=SaveBattleCommand}">
			Save Battle
		</Button>
		<Separator></Separator>
	</ToolBar>		
	
</UserControl>
